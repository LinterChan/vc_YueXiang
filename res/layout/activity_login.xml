<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_color"
    android:gravity="center_vertical" >

    <EditText
        android:id="@+id/login_username_edittext"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="用户名"
        android:inputType="textEmailAddress"
        android:maxLength="25"
        android:singleLine="true" />

    <EditText
        android:id="@+id/login_password_edittext"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_username_edittext"
        android:digits="_0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWSYZ"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:singleLine="true" />

    <Button
        android:id="@+id/login_login_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_password_edittext"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/icon_register_login_button"
        android:text="登录"
        android:textColor="@color/login_button_text_color" />

</RelativeLayout>